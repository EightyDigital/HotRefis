{% extends "RefiBundle::tempBase.html.twig" %}

{% block header %}
{% endblock header %}





{% block content %}
{# <div ng-controller="map__controller" class="map__container" >
  <div id="heatmap" class="angular-google-map-container"></div>
</div> #}


<div class="container" style="clear:both; margin-top:25px;">
  <div class="row-fluid">
    <div class="span12">
      <h2 style="font-size: 32px;
         font-weight: 400;
         color: #555;
         margin: 15px  0;
         text-transform: uppercase;">Prospect List</h2>

    {% if prospect_list is empty %}
    You have no prospects blasted yet.
    {% endif %}
    {% for list in prospect_list %}
    <table id="Prospect-Table" border="1" ng-app="tablemod">
        <thead>
          <th colspan='12'>
            <span class="thleft">Prospects for <span style="font-weight:400;">{{ list.name }}</span></span>
            <span class="thright">{{ list.current_min_row }}-{{ list.current_max_row }} of {{ list.total_rows }}</span>
          </th>
          {{ knp_pagination_render(list.pagination) }}
        </thead>
        <tbody>

          <tr>
            <td style="background:#063141;"><a style="color:#fff; text-transform:uppercase; font-size:14px;" href="#">Prospect ID</a></td>
            <td style="background:#063141;"><a style="color:#fff; text-transform:uppercase; font-size:14px;" href="#">Full Name</a></td>
			<td style="background:#063141;"><a style="color:#fff; text-transform:uppercase; font-size:14px;" href="#">Email</a></td>
			<td style="background:#063141;"><a style="color:#fff; text-transform:uppercase; font-size:14px;" href="#">Mobile</a></td>
            <td style="background:#063141;"><a style="color:#fff; text-transform:uppercase; font-size:14px;" href="#">Properties</a></td>
            <td style="background:#063141;"><a style="color:#fff; text-transform:uppercase; font-size:14px;" href="#">Status</a></td>
            <td style="background:#063141;" colspan='8' width="30%"><a href="#"  style="color:#fff; text-transform:uppercase; font-size:14px;">Notes</a></td>
          </tr>

    {% for prospect in list.pagination %}
      <tr>
            <td>{{ prospect.prospectId }}</td>
            <td>{{ prospect.fullname }}</td>
			<td>{{ prospect.email }}</td>
			<td>{{ prospect.mobilenumber }}</td>
            <td>{{ prospect.property_owned }}</td>
            <td>{% if prospect.status == 1 %}Contacted{% elseif prospect.status == 2 %}Engaged{% else %}Blasted{% endif %}</td>
            <td colspan='8' width="15%"><textarea style="resize:none;" rows="3" data-id="{{ prospect.id }}" class="prospect_note" >{{ prospect.note }}</textarea></td>
          </tr>
    {% endfor %}

        </tbody>
      </table>
    {% endfor %}

  </div>
  </div>
</div>

<script type="text/javascript">
	$('.prospect_note').on('blur', function() {
		var noteVal = $(this).val(), noteId = $(this).data('id');
		
		$.ajax({
			type: "POST",
			url: "{{ url('API_list_update') }}",
			data: {note:noteVal , id:noteId},
			success: function(data) {
				console.log('note added! yey!');
			}
	   })
	});
</script>
{% endblock content %}





{% block footer %}
  {{ parent() }}
{% endblock footer %}

