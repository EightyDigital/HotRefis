<div class="container" style="clear:both; margin-top:25px;">
  <div class="row-fluid">
    <div class="span12">
      <h2 style="font-size: 32px;
         font-weight: 400;
         color: #555;
         margin: 15px  0;
         text-transform: uppercase;">Sending your reports</h2>
      <div id="progressbar"><div class="progress-label">Loading...</div></div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('.prospect_note').on('blur', function() {
    var noteVal = $(this).val(), noteId = $(this).data('id');

    $.ajax({
      type: "POST",
      url: "{{ url('API_list_update') }}",
      data: {note:noteVal , id:noteId},
      success: function(data) {
        console.log('note added! yey!');
      }
     })
  });
  $(function(){
        var progressbar = $( "#progressbar" ),
      progressLabel = $( ".progress-label" );

    progressbar.progressbar({
      value: false,
      change: function() {
        progressLabel.text( progressbar.progressbar( "value" ) + "%" );
      },
      complete: function() {
        progressLabel.text( "Complete!" ).css('color', '#fff');
      }
    });
    function progress() {
      var val = progressbar.progressbar( "value" ) || 0;

      progressbar.progressbar( "value", val + 2 );

      if ( val < 99 ) {
        setTimeout( progress, 80 );
      }
    }

    setTimeout( progress, 2000 );
  });
</script>
